<%= render '/public/navbar' %>

<div class='loginbg'>
	<p class="text-center text-white" style="padding-top: 100px; font-family: 'Courier New'; font-size: 50px; font-weight: 100">COME DONDE QUIERAS</p>
	<br>
	<form style='margin-left: 33%; margin-right: 33%;padding-bottom: 125px;'>
